<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:id="@+id/monster_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Name monster"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp"/>

    <TextView
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:id="@+id/monster_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/monster_name"
        android:layout_marginTop="4dp"
        android:text="Count"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="16sp" />

    <at.markushi.ui.CircleButton
        android:id="@+id/buttonIncrease"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:gravity="center_vertical|center_horizontal"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textColor="#fff"
        android:textSize="25sp"
        app:cb_color="#99CC00"
        app:cb_pressedRingWidth="8dip"
        android:layout_toLeftOf="@+id/buttonDecrease"
        android:layout_toStartOf="@+id/buttonDecrease"
        android:src="@drawable/ic_plus_white_24dp" />

    <at.markushi.ui.CircleButton
        android:id="@+id/buttonDecrease"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textColor="#0099CC"
        android:textSize="25sp"
        app:cb_color="#cc3400"
        app:cb_pressedRingWidth="8dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_minus_white_24dp" />

</RelativeLayout>